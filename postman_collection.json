                            "mode": "raw",
                            "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phoneNumber\": \"+1234567890\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register/student",
